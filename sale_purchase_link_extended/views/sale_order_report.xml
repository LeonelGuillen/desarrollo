<t t-name="sale.report_saleorder_document">
    <t t-call="web.external_layout">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
        <t t-set="forced_vat" t-value="doc.fiscal_position_id.foreign_vat"/>
        <t t-set="address">
            <div t-field="doc.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
            <p t-if="doc.partner_id.vat">
                <t t-if="doc.company_id.account_fiscal_country_id.vat_label" t-out="doc.company_id.account_fiscal_country_id.vat_label"/>
                <t t-else="">Tax ID</t>: <span t-field="doc.partner_id.vat"/>
            </p>
        </t>
        <t t-if="doc.partner_shipping_id == doc.partner_invoice_id and doc.partner_invoice_id != doc.partner_id or doc.partner_shipping_id != doc.partner_invoice_id">
            <t t-set="information_block">
                <strong>
                    <t t-if="doc.partner_shipping_id == doc.partner_invoice_id">
                        Invoicing and Shipping Address
                    </t>
                    <t t-else="">
                        Invoicing Address
                    </t>
                </strong>
                <div t-field="doc.partner_invoice_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                <t t-if="doc.partner_shipping_id != doc.partner_invoice_id">
                    <strong class="d-block mt-3">Shipping Address</strong>
                    <div t-field="doc.partner_shipping_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                </t>
            </t>
        </t>
        <div class="page">
            <div class="oe_structure"/>

            <t t-set="is_proforma" t-value="env.context.get('proforma', False) or is_pro_forma"/>
            <t t-set="layout_document_title">
                <span t-if="is_proforma">Pro-Forma Invoice # </span>
                <span t-elif="doc.state in ['draft','sent']">Quotation # </span>
                <span t-else="">Order # </span>
                <span t-field="doc.name">SO0000</span>
                <t t-if="doc.x_studio_placa">
                    <br/>
                    <span>Placa # </span>
                    <span t-field="doc.x_studio_placa" style="text-transform: uppercase;"/>
                </t>
            </t>

            <div class="row mb-4" id="informations">
                <div t-if="doc.client_order_ref" class="col" name="informations_reference">
                    <strong>Your Reference</strong>
                    <div t-field="doc.client_order_ref">SO0000</div>
                </div>
                <div t-if="doc.date_order" class="col" name="informations_date">
                    <strong t-if="is_proforma">Issued Date</strong>
                    <strong t-elif="doc.state in ['draft', 'sent']">Quotation Date</strong>
                    <strong t-else="">Order Date</strong>
                    <div t-field="doc.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}">2023-12-31</div>
                </div>
                <div t-if="doc.validity_date and doc.state in ['draft', 'sent'] and False" class="col" name="expiration_date" style="display: none;">
                    <strong>Expiration</strong>
                    <div t-field="doc.validity_date">2023-12-31</div>
                </div>
                <div t-if="doc.user_id.name" class="col">
                    <strong>Salesperson</strong>
                    <div t-field="doc.user_id">Mitchell Admin</div>
                </div>
            </div>

            <t t-set="lines_to_report" t-value="doc._get_order_lines_to_report()"/>
            <t t-set="display_discount" t-value="any(l.discount for l in lines_to_report)"/>

            <div class="oe_structure"/>
            <style>
                .o_main_table th {
                    font-size: 0.7em !important;
                }
                .o_main_table td {
                    font-size: 0.7em !important;
                }
                .o_main_table td span {
                    font-size: 1em !important;
                }
                .o_main_table .fw-bold {
                    font-size: 0.7em !important;
                }
                .o_main_table .fst-italic {
                    font-size: 0.7em !important;
                }
            </style>
            <table class="o_has_total_table table o_main_table table-borderless">
                <thead style="display: table-row-group">
                    <tr>
                        <th name="th_line_number" class="text-center" style="width: 5%;">#</th>
                        <th name="th_description" class="text-start">Description</th>
                        <th name="th_quantity" class="text-end text-nowrap">Quantity</th>
                        <th name="th_priceunit" class="text-end text-nowrap">Unit Price</th>
                        <th name="th_discount" t-if="display_discount" class="text-end" style="display: none;">
                            <span>% Desc</span>
                        </th>
                        <th name="th_discount_amount" t-if="display_discount" class="text-end">
                            <span>Descuento</span>
                        </th>
                        <th name="th_taxes" class="text-end">Taxes</th>
                        <th name="th_subtotal" class="text-end">
                            <span>Subtotal</span>
                        </th>
                        <th name="th_total_line" class="text-end">
                            <span>Total LÃ­nea</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">

                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="line_counter" t-value="0"/>

                    <t t-foreach="lines_to_report" t-as="line">

                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>

                        <tr t-att-class="'fw-bold o_line_section' if (line.display_type == 'line_section' or line.product_type == 'combo') else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type and line.product_type != 'combo'">
                                <t t-set="line_counter" t-value="line_counter + 1"/>
                                <td name="td_line_number" class="text-center">
                                    <span t-esc="line_counter"/>
                                </td>
                                <td name="td_name">
                                    <t t-if="doc.x_studio_impresion_parte">
                                        <!-- Mostrar line.name tal cual (incluye [PART_NUMBER] Nombre) -->
                                        <span t-field="line.name">Bacon Burger</span>
                                    </t>
                                    <t t-else="">
                                        <!-- Ocultar part_number - mostrar solo el nombre limpio -->
                                        <t t-if="line.product_id and line.product_id.part_number and ('[' + str(line.product_id.part_number) + ']' in str(line.name))">
                                            <t t-set="bracket_pos" t-value="str(line.name).find('] ')"/>
                                            <span t-esc="str(line.name)[bracket_pos + 2:] if bracket_pos != -1 else line.name"/>
                                        </t>
                                        <t t-elif="line.product_id and line.product_id.part_number and (str(line.product_id.part_number) in str(line.name))">
                                            <span t-field="line.product_id.name"/>
                                        </t>
                                        <t t-else="">
                                            <span t-field="line.name"/>
                                        </t>
                                    </t>
                                </td>
                                <td name="td_quantity" class="o_td_quantity text-end">
                                    <span t-field="line.product_uom_qty" t-options="{&quot;widget&quot;: &quot;integer&quot;}" class="text-nowrap">3</span>
                                    <span t-if="line.product_packaging_id">
                                        (<span t-field="line.product_packaging_qty" t-options="{&quot;widget&quot;: &quot;integer&quot;}"/> <span t-field="line.product_packaging_id"/>)
                                    </span>
                                </td>
                                <td name="td_priceunit" class="text-end text-nowrap">
                                    <span t-field="line.price_unit">3</span>
                                </td>
                                <td t-if="display_discount and line.discount &gt; 0" class="text-end" style="display: none;">
                                    <span t-field="line.discount">-</span>
                                </td>
                                <td t-elif="display_discount" class="text-end" style="display: none;"/>
                                <td t-if="display_discount and line.discount &gt; 0" class="text-end text-nowrap">
                                    <span t-esc="(line.product_uom_qty * line.price_unit * line.discount / 100)" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                                </td>
                                <td t-elif="display_discount" class="text-end"/>
                                <td name="td_taxes" class="text-end text-nowrap">
                                    <span t-esc="line.price_total - line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                                </td>
                                <td t-if="not line.is_downpayment" name="td_subtotal" class="text-end o_price_total">
                                    <span t-field="line.price_subtotal">27.00</span>
                                </td>
                                <td t-if="not line.is_downpayment" name="td_line_total" class="text-end text-nowrap">
                                    <strong>
                                        <span t-field="line.price_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                                    </strong>
                                </td>
                            </t>
                            <t t-elif="line.display_type == 'line_section' or line.product_type == 'combo'">
                                <td name="td_section_line" t-att-colspan="8 + (2 if display_discount else 0)">
                                    <span t-field="line.name">A section title</span>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-elif="line.display_type == 'line_note'">
                                <td name="td_note_line" t-att-colspan="8 + (2 if display_discount else 0)">
                                    <span t-field="line.name">A note, whose content usually applies to the section or product above.</span>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or lines_to_report[line_index+1].display_type == 'line_section' or lines_to_report[line_index+1].product_type == 'combo' or (line.combo_item_id and not lines_to_report[line_index+1].combo_item_id)) and not line.is_downpayment">
                            <t t-set="current_section" t-value="None"/>
                            <tr class="is-subtotal text-end">
                                <td name="td_section_subtotal" t-att-colspan="7 + (2 if display_discount else 0)">
                                    <strong class="mr16">Subtotal</strong>
                                    <span t-out="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}">31.05</span>
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
            
            <div class="clearfix" name="so_total_summary">
                <div id="total" class="row mt-n3" name="total">
                    <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                        <style>
                            .o_total_table {
                                font-size: 0.7em !important;
                            }
                            .o_total_table td {
                                font-size: 1em !important;
                            }
                            .o_total_table strong {
                                font-size: 1em !important;
                            }
                        </style>
                        <table class="o_total_table table table-borderless">
                            <t t-set="subtotal_sin_descuentos" t-value="sum(line.product_uom_qty * line.price_unit for line in lines_to_report if not line.display_type and line.product_type != 'combo')"/>
                            <t t-set="total_descuentos" t-value="sum((line.product_uom_qty * line.price_unit * line.discount / 100) for line in lines_to_report if not line.display_type and line.product_type != 'combo')"/>
                            <t t-set="total_impuestos" t-value="sum(line.price_total - line.price_subtotal for line in lines_to_report if not line.display_type and line.product_type != 'combo')"/>
                            <t t-set="nombres_impuestos" t-value="', '.join(list(set([tax.name for line in lines_to_report for tax in line.tax_id if not line.display_type and line.product_type != 'combo'])))"/>
                            <t t-set="porcentaje_descuento" t-value="sum(line.discount for line in lines_to_report if not line.display_type and line.product_type != 'combo' and line.discount &gt; 0) / len([line for line in lines_to_report if not line.display_type and line.product_type != 'combo' and line.discount &gt; 0]) if len([line for line in lines_to_report if not line.display_type and line.product_type != 'combo' and line.discount &gt; 0]) &gt; 0 else 0"/>
                            
                            <tr class="border-black o_subtotal">
                                <td><strong>Subtotal:</strong></td>
                                <td class="text-end">
                                    <span t-esc="subtotal_sin_descuentos" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                                </td>
                            </tr>
                            
                            <tr t-if="total_descuentos &gt; 0" class="border-black">
                                <td><strong>Descuento <span t-esc="'%.1f' % porcentaje_descuento"/>%:</strong></td>
                                <td class="text-end">
                                    <span t-esc="-total_descuentos" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                                </td>
                            </tr>
                            
                            <tr t-if="total_impuestos &gt; 0" class="border-black">
                                <td><strong>Impuesto <span t-esc="nombres_impuestos or 'General'"/>:</strong></td>
                                <td class="text-end">
                                    <span t-esc="total_impuestos" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                                </td>
                            </tr>
                            
                            <tr class="border-black o_total">
                                <td><strong>Total:</strong></td>
                                <td class="text-end">
                                    <span t-field="doc.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="oe_structure"/>

            <div t-if="not doc.signature" class="oe_structure"/>
            <div t-else="" class="mt-4 ml64 mr4" name="signature">
                <div class="offset-8">
                    <strong>Signature</strong>
                </div>
                <div class="offset-8">
                    <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                </div>
                <div class="offset-8 text-center">
                    <span t-field="doc.signed_by">Oscar Morgan</span>
                </div>
            </div>
            <div>
                <span t-field="doc.note" t-attf-style="#{'text-align:justify;text-justify:inter-word;' if doc.company_id.terms_type != 'html' else ''}" name="order_note"/>
                <p t-if="not is_html_empty(doc.payment_term_id.note)">
                    <span t-field="doc.payment_term_id.note">The payment should also be transmitted with love</span>
                </p>
                <div class="oe_structure"/>
                <p t-if="doc.fiscal_position_id and not is_html_empty(doc.fiscal_position_id.sudo().note)" id="fiscal_position_remark">
                    <strong>Fiscal Position Remark:</strong>
                    <span t-field="doc.fiscal_position_id.sudo().note">No further requirements for this payment</span>
                </p>
            </div>
            <div class="oe_structure"/>
        </div>
    </t>
</t>